@inject AppState AppState
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<nav class="navbar navbar-expand-lg navbar-dark custom-navbar w-100">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><img src="/Maws hoteller photos/Sunset Resort.png" alt="" class="navbar-logo"/></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                    </NavLink>
                </li>

                @if (!AppState.LoggedIn)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                        </NavLink>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <button class="nav-link btn btn-link" @onclick="Logout">
                            <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                        </button>
                    </li>
                }

                <li class="nav-item">
                    <NavLink class="nav-link" href="create-profile">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> Create Profile
                    </NavLink>
                </li>

                @if (AppState.LoggedIn)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="ProfileDashboard">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Profile Dashboard
                        </NavLink>
                    </li>
                }

                <li class="nav-item">
                    <NavLink class="nav-link" href="contact-support">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> Contact Support
                    </NavLink>
                </li>

                @if (AppState.LoggedIn && AppState.IsAdmin)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="booking_dashboard">
                            <span class="bi bi-calendar" aria-hidden="true"></span> Booking Dashboard
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="admin-profile-list">
                            <span class="bi bi-list-ul" aria-hidden="true"></span> Manage Profiles
                        </NavLink>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

@code {
    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    private async Task Logout()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "authToken");
        AppState.LoggedIn = false;
        NavigationManager.NavigateTo("/");
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}
